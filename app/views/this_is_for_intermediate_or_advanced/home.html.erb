</div>

<script type="text/javascript">
$(function() {
   $("#bike_id").css("display", "none");
    $('#maker_id').change(function() {
      $.get({
        url: "get_bike_name",
        data: { maker_id: $('#maker_id').has('option:selected').val() }
      });
    });
  });
  $(function() {
      $('#maker_id_1').change(function() {
        $.get({
          url: "get_bike_name_1",
          data: { maker_id: $('#maker_id_1').has('option:selected').val() }
        });
      });
    });
    $(function() {
        $('#maker_id_2').change(function() {
          $.get({
            url: "get_bike_name_2",
            data: { maker_id: $('#maker_id_2').has('option:selected').val() }
          });
        });
      });
      $(function() {
          $('#maker_id_3').change(function() {
            $.get({
              url: "get_bike_name_3",
              data: { maker_id: $('#maker_id_3').has('option:selected').val() }
            });
          });
        });

        $(function(){
          $("#bike_id").css("display", "none");
          $("#maker_id").click(function(){
              $("#bike_id").toggle();
          });
          $("#maker_id_1").css("display", "none");
          $("#bike_id").click(function(){
              $("#maker_id_1").toggle();
          });
          $('#bike_id_1').css("display", "none");
          $('#maker_id_1').click(function(){
            $('#bike_id_1').toggle();
          });
          $('#maker_id_2').css("display", "none");
          $("#bike_id_1").click(function(){
            $("#maker_id_2").toggle();
          });
          $('#bike_id_2').css("display", "none");
          $("#maker_id_2").click(function(){
            $("#bike_id_2").toggle();
          });
          $('#maker_id_3').css("display", "none");
          $("#bike_id_2").click(function(){
            $("#maker_id_3").toggle();
          });
          $('#bike_id_3').css("display", "none");
          $("#maker_id_3").click(function(){
            $("#bike_id_3").toggle();
          });
      });


</script>
