    </tr>
  </thead>

  <tbody>
    <% @bikes.each do |bike| %>
      <tr>
        <td><%= bike.id %></td>
        <td><%= find_maker_name_from(bike.maker_id).maker_name %></td>
        <td><%= bike.bike_series %></td>
