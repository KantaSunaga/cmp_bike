        <td><%= chek_frame_type_from(bike.frame_type) %></td>
        <td><%= bike.frame_name %></td>
        <td><%= chek_compornent_from(bike.component) %></td>
        <td><%= bike.rear_derailleur %></td>
        <td><%= bike.front_derailleur %></td>
        <td><%= bike.crank %></td>
        <td><%= bike.brake %></td>
        <td><%= bike.chain %></td>
        <td><%= bike.sprocket %></td>
        <td><%= bike.sti_lever %></td>
        <td><%= bike.bb %></td>
        <td><%= bike.wheel %></td>
        <td><%= bike.saddle %></td>
        <td><%= bike.seat_pillar %></td>
        <td><%= bike.handle %></td>
        <td><%= bike.stem %></td>
        <td><%= bike.tire %></td>
        <td><%= bike.pedal %></td>
        <td><%= bike.valve %></td>
        <td><%= bike.accessory %></td>
        <td><%= bike.maker_url %></td>
        <td><%= bike.shop_url %></td>
        <td><%= bike.price %></td>
        <td><%= bike.gear %></td>
        <td><%= bike.fork %></td>
        <td><%= bike.fork_type%></td>
        <td><%= bike.kc_or_cb%></td>
        <td><%= which_sex(bike.sex)%></td>
        <td><%= find_brake_type(bike.brake_type)%></td>
        <td><%= link_to 'Show', bike %></td>
        <td><%= link_to 'Edit',  edit_roadbike_path(bike) %></td>
        <td><%= link_to 'Destroy', bike, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

