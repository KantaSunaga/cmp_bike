<p id="notice"><%= notice %></p>

<h1>Sizes</h1>

<table>
  <thead>
    <tr>
      <th>Size</th>

      <th>Min height</th>
      <th>Max height</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sizes.each do |size| %>
      <tr>
        <td><%= size.size %></td>
        <td><%= size.min_height %></td>
        <td><%= size.max_height %></td>
        <td><%= size.weight %></td>
        <td><%= link_to 'Show', size %></td>
        <td><%= link_to 'Edit', edit_size_path(size) %></td>
        <td><%= link_to 'Destroy', size, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

